<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EBAC"
    tools:context=".TodayFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="450dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg2" />

        <TextView
            android:id="@+id/verse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bigshot_one"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="'Praise God! God bless him who comes in the name of the Lord!'"
            android:textSize="35dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/verse_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="145dp"
            android:fontFamily="@font/bigshot_one"
            android:text="Mark 11:9b"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/today_devotion"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ADD8E6"
            android:fontFamily="@font/bigshot_one"
            android:text="DEVOTION"
            android:textSize="25dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/pray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/pray"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/amethysta"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/pray2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/pray1"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="470dp"
            android:fontFamily="@font/amethysta"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/pray3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/pray2"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="580dp"
            android:fontFamily="@font/amethysta"
            android:justificationMode="inter_word"/>

    </FrameLayout>


</androidx.drawerlayout.widget.DrawerLayout>