<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:src="@drawable/baseline_calendar_today_24" android:gravity="center"/>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="24dp" android:height="24dp"/>
            <solid android:color="@android:color/transparent"/>
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
        </shape>
        <layer-list>
            <item android:gravity="center">
                <bitmap android:src="@drawable/calendar_number_bg" android:gravity="center"/>
            </item>
            <item android:gravity="center">
                <bitmap android:src="@drawable/calendar_number_text" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</layer-list>
